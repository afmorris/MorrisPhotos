@model MorrisPhotos.Web.ViewModels.Home.SchoolYearDetailsViewModel

@{
    ViewData["Title"] = $"{Model.SchoolYear.Name} School Year Photos";
}

<section class="module-cover parallax" data-background="/images/module-14.jpg" data-overlay="0.5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>@ViewData["Title"]</h2>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="breadcrumb-item active">
                        @Model.SchoolYear.Name
                    </li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="module">
    <div class="container">
        <div class="row">
            @foreach (var category in Model.Categories)
            {
                <div class="col-md-3">
                    <div class="shop-grid-item">
                        <div class="shop-item-thumb">
                            <a asp-area="" asp-controller="Home" asp-action="SchoolYearAndCategoryDetails" asp-route-schoolYear="@Model.SchoolYear.Name" asp-route-categoryName="@category.UrlName"><img src="@category.ThumbnailImageUrl" alt="@category.DisplayName" class="img-responsive"></a>
                            <div class="shop-item-hidden"><a asp-area="" asp-controller="Home" asp-action="SchoolYearAndCategoryDetails" asp-route-schoolYear="@Model.SchoolYear.Name" asp-route-categoryName="@category.UrlName" class="btn btn-new-white">Browse</a></div>
                        </div>
                        <div class="shop-item-captions">
                            <h6 class="shop-item-title">@category.DisplayName</h6>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>